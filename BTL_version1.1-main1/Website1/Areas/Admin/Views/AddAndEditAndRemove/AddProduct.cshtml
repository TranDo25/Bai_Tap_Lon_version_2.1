@model Website1.Models.product

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Add Product
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AddProduct", "AddAndEditAndRemove", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>pro_name</label>
                            @Html.TextBoxFor(m => m.pro_name, new { @class = "form-control", @placeholder = "pro_name" })
                        </div>
                        <div class="form-group">
                            <label>pro_category_id</label>
                            @Html.TextBoxFor(m => m.pro_category_id, new { @class = "form-control", @placeholder = "pro_category_id" })
                        </div>
                        <div class="form-group">
                            <label>pro_price</label>
                            @Html.TextBoxFor(m => m.pro_price, new { @class = "form-control", @placeholder = "pro_price" })
                        </div>
                        <div class="form-group">
                            <label>discount</label>
                            @Html.TextBoxFor(m => m.discount, new { @class = "form-control", @placeholder = "discount" })
                        </div>
                        <div class="form-group">
                            <label>final_price</label>
                            @Html.TextBoxFor(m => m.final_price, new { @class = "form-control", @placeholder = "final_price" })
                        </div>
                        <div class="form-group">
                            <label>pro_quantity</label>
                            @Html.TextBoxFor(m => m.pro_quantity, new { @class = "form-control", @placeholder = "pro_quantity" })
                        </div>
                        <div class="form-group">
                            <label>size_S</label>
                            @Html.TextBoxFor(m => m.size_S, new { @class = "form-control", @placeholder = "size_S" })
                        </div>
                        <div class="form-group">
                            <label>size_M</label>
                            @Html.TextBoxFor(m => m.size_M, new { @class = "form-control", @placeholder = "size_M" })
                        </div>
                        <div class="form-group">
                            <label>size_L</label>
                            @Html.TextBoxFor(m => m.size_L, new { @class = "form-control", @placeholder = "size.L" })
                        </div>
                        <div class="form-group">
                            <label>pro_description</label>
                            @Html.TextBoxFor(m => m.pro_description, new { @class = "form-control", @placeholder = "pro_description" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" value="Add Product" class="btn btn-success" />
                            @if (ViewBag.message != "")
                            {
                                <span class="badge badge-danger">@ViewBag.message</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>